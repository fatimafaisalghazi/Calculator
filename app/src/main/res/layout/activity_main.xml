<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="=4"
        android:textColor="#55423866"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input_digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/_0"
        android:textColor="#554238"
        android:textSize="36.sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/solution" />

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/drag_handle"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_digit"
        app:layout_constraintVertical_bias="0.661" />

    <Button
        android:id="@+id/devide"
        style="@style/operator_btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/operation_background"
        android:clickable="true"
        android:gravity="center"
        android:text="/"
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toTopOf="@id/times"
        app:layout_constraintEnd_toEndOf="@+id/times"
        app:layout_constraintStart_toStartOf="@+id/times"
        />

    <Button
        android:id="@+id/reminder"
        style="@style/operator_btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/operation_background"
        android:clickable="true"
        android:gravity="center"
        android:text="%"
        app:layout_constraintBottom_toTopOf="@id/no_nine"
        app:layout_constraintEnd_toStartOf="@id/devide"
        app:layout_constraintStart_toEndOf="@+id/back" />

    <Button
        android:id="@+id/back"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:text="->"
        app:layout_constraintEnd_toStartOf="@+id/reminder"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintTop_toTopOf="@+id/clear" />

    <Button
        android:id="@+id/clear"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:padding="4dp"
        android:text="AC"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="211dp" />

    <Button
        android:id="@+id/times"
        style="@style/operator_btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/operation_background"
        android:clickable="true"
        android:gravity="center"
        android:text="x"
        app:layout_constraintBottom_toTopOf="@id/plus"
        app:layout_constraintEnd_toEndOf="@+id/plus"
        app:layout_constraintStart_toStartOf="@+id/plus" />

    <Button
        android:id="@+id/no_nine"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="9"
        app:layout_constraintEnd_toEndOf="@+id/reminder"
        app:layout_constraintStart_toStartOf="@+id/reminder"
        app:layout_constraintTop_toBottomOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/no_seven"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/no_eight"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:text="8"
        android:onClick="onClickNumber"
        app:layout_constraintEnd_toEndOf="@+id/back"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/no_seven" />

    <Button
        android:id="@+id/no_seven"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="7"
        app:layout_constraintEnd_toEndOf="@+id/clear"
        app:layout_constraintStart_toStartOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/plus"
        style="@style/operator_btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/operation_background"
        android:clickable="true"
        android:gravity="center"
        android:text="+"
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toTopOf="@id/minus"
        app:layout_constraintEnd_toEndOf="@+id/times"
        app:layout_constraintStart_toStartOf="@id/minus"
        app:layout_constraintTop_toBottomOf="@id/minus" />

    <Button
        android:id="@+id/no_six"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="6"
        app:layout_constraintEnd_toEndOf="@+id/no_seven"
        app:layout_constraintStart_toStartOf="@id/no_seven"
        app:layout_constraintTop_toBottomOf="@id/no_seven" />

    <Button
        android:id="@+id/no_five"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="5"
        app:layout_constraintEnd_toEndOf="@+id/no_eight"
        app:layout_constraintStart_toStartOf="@id/no_eight"
        app:layout_constraintTop_toBottomOf="@id/no_eight" />

    <Button
        android:id="@+id/no_four"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="4"

        app:layout_constraintEnd_toEndOf="@+id/no_nine"
        app:layout_constraintStart_toStartOf="@id/no_nine"
        app:layout_constraintTop_toBottomOf="@id/no_nine" />
    /////

    <Button
        android:id="@+id/minus"
        style="@style/operator_btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/operation_background"
        android:clickable="true"
        android:gravity="center"
        android:text="-"
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toBottomOf="@id/equal"
        app:layout_constraintEnd_toEndOf="@+id/equal"
        app:layout_constraintStart_toStartOf="@id/equal"
        app:layout_constraintTop_toBottomOf="@id/plus"
        />

    <Button
        android:id="@+id/no_three"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="3"

        app:layout_constraintBottom_toBottomOf="@id/dot"
        app:layout_constraintEnd_toEndOf="@+id/no_four"
        app:layout_constraintStart_toStartOf="@id/no_four"
        app:layout_constraintTop_toBottomOf="@id/no_four"
        />

    <Button
        android:id="@+id/no_tow"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/no_zero"
        app:layout_constraintEnd_toEndOf="@+id/no_five"
        app:layout_constraintStart_toStartOf="@id/no_five"
        app:layout_constraintTop_toBottomOf="@id/no_five" />

    <Button
        android:id="@+id/no_one"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/minus_plus"
        app:layout_constraintEnd_toEndOf="@+id/no_six"
        app:layout_constraintStart_toStartOf="@id/no_six"
        app:layout_constraintTop_toBottomOf="@id/no_six" />

    <Button
        android:id="@+id/equal"
        style="@style/operator_btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/operation_background"
        android:gravity="center"
        android:text="="
        android:onClick="onClickNumber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dot"
        app:layout_constraintTop_toBottomOf="@id/minus" />

    <Button
        android:id="@+id/dot"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="."
        app:layout_constraintStart_toEndOf="@id/no_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/equal"
        app:layout_constraintTop_toBottomOf="@id/no_three" />

    <Button
        android:id="@+id/no_zero"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/minus_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dot"
        app:layout_constraintTop_toBottomOf="@id/no_tow" />

    <Button
        android:id="@+id/minus_plus"
        style="@style/btn_background"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="Â±"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/no_zero"
        app:layout_constraintTop_toBottomOf="@id/no_one" />
    ////


</androidx.constraintlayout.widget.ConstraintLayout>